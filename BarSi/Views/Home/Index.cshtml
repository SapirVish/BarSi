@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/home.css">
}

<div class="row">
    <div class="col-md-9">
        <div class="row">
            <h2 id="statistics-title" class="page-title">Statistics And Data</h2>
            <div class="clearfix"></div>
        </div>
        <div id="statistics-section" class="row">
            <div id="statistics-graph" class="card m-b-30">
                <div class="card" id="graphs">
                    <nav class="card-header">
                        <div class="nav nav-tabs card-header-tabs" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active" id="nav-patients-to-hospital-tab" data-toggle="tab" href="#patients-to-hospital-statistics" role="tab" aria-controls="patients-to-hospital-statistics" aria-selected="true">Patients Count In Hospital</a>
                            <a class="nav-item nav-link" id="nav-patients-to-doctors-tab" data-toggle="tab" href="#patients-to-doctors-statistics" role="tab" aria-controls="patients-to-doctors-statistics" aria-selected="false">Patients For Doctor</a>
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="patients-to-hospital-statistics" role="tabpanel" aria-labelledby="nav-patients-to-hospital-tab">
                            <svg id="patients-by-hospital-graph"></svg>
                        </div>
                        <div class="tab-pane fade" id="patients-to-doctors-statistics" role="tabpanel" aria-labelledby="nav-patients-to-doctors-tab">
                            <svg id="patients-by-doctor-graph"></svg>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card m-b-30" id="statistics">
                <div class="card-body">
                    <h4>Global covid-19 Data</h4>
                    <div id="global-covid19-data">
                        <div class="row">
                            <table class="table table-striped table-bordered table-hover display" id="covid19-table">
                                <thead class="thead-light">
                                    <tr>
                                        <th>
                                            Country
                                        </th>
                                        <th>
                                            New Confirmed
                                        </th>
                                        <th>
                                            Total Confirmed
                                        </th>
                                        <th>
                                            New Deaths
                                        </th>
                                        <th>
                                            Total Deaths
                                        </th>
                                        <th>
                                            New Recovered
                                        </th>
                                        <th>
                                            Total Recovered
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="covid19-table-data">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 justify-content-end">
        <div class="row">
            <div class="card m-b-30" id="video-card">
                <div class="card-body">
                    <section class="info-section">
                        <div class="text-center video-div">
                            <video id="video1" style="width:600px;max-width:100%;" controls="" data-vscid="2pq0mznng">
                                <source src="~/Media/Videos/covid19.mp4" type="video/mp4">
                                <source src="~/Media/Videos/covid19.webm" type="video/mp4">
                                <source src="~/Media/Videos/covid19.ogg" type="video/mp4">
                                Your browser does not support HTML5 video.
                            </video>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card m-b-30">
                <aside id="twitter" class="card-body">
                    <a class="twitter-timeline" data-width="610" data-height="400" href="https://twitter.com/IsraelMOH?ref_src=twsrc%5Etfw">Tweets by IsraelMOH</a>
                    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                </aside>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js"></script>
    <script src="~/js/home.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://d3js.org/d3.v5.min.js"></script>

    <script type="text/html" id="global-covid19-data-results">
        <tr>
            <td>
                ${Country}
            </td>
            <td>
                ${NewConfirmed}
            </td>
            <td>
                ${TotalConfirmed}
            </td>
            <td>
                ${NewDeaths}
            </td>
            <td>
                ${TotalDeaths}
            </td>
            <td>
                ${NewRecovered}
            </td>
            <td>
                ${TotalRecovered}
            </td>
        </tr>
    </script>
}
