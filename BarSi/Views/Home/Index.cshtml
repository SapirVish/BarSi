@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/home.css">
}


<div class="card-body">
    <section class="info-section">
        <div class="accordion" id="statistics">
            <h2>Statistics And Data</h2>
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#world-data" aria-expanded="true" aria-controls="world-data">
                            World Data
                        </button>
                    </h2>
                </div>

                <div id="world-data" class="collapse show" aria-labelledby="world-data" data-parent="#statistics">
                    <div id="global-covid19-data">
                        <table class="table table-striped table-bordered table-hover" id="patients-table">
                            <thead class="thead-light">
                                <tr>
                                    <th>
                                        Country
                                    </th>
                                    <th>
                                        New Confirmed
                                    </th>
                                    <th>
                                        Total Confirmed
                                    </th>
                                    <th>
                                        New Deaths
                                    </th>
                                    <th>
                                        Total Deaths
                                    </th>
                                    <th>
                                        New Recovered
                                    </th>
                                    <th>
                                        Total Recovered
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#patients-to-hospital-statistics" aria-expanded="false" aria-controls="patients-to-hospital-statistics">
                            Patients Count In Hospital
                        </button>
                    </h2>
                </div>
                <div id="patients-to-hospital-statistics" class="collapse" aria-labelledby="headingTwo" data-parent="#statistics">
                    <div class="card-body">
                        <svg id="patients-by-hospital-graph"></svg>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#patients-to-doctors-statistics" aria-expanded="false" aria-controls="patients-to-doctors-statistics">
                            Patients For Doctor
                        </button>
                    </h2>
                </div>
                <div id="patients-to-doctors-statistics" class="collapse" aria-labelledby="headingThree" data-parent="#statistics">
                    <div class="card-body">
                        <svg id="patients-by-doctor-graph"></svg>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center video-div">
            <video id="video1" style="width:600px;max-width:100%;" controls="" data-vscid="2pq0mznng">
                <source src="~/Media/Videos/covid19.mp4" type="video/mp4">
                <source src="~/Media/Videos/covid19.webm" type="video/mp4">
                <source src="~/Media/Videos/covid19.ogg" type="video/mp4">
                Your browser does not support HTML5 video.
            </video>
        </div>
    </section>
</div>

@section Scripts{
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js"></script>
    <script src="~/js/home.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://d3js.org/d3.v5.min.js"></script>

    <script type="text/html" id="global-covid19-data-results">
        <tr>
            <td>
                ${Country}
            </td>
            <td>
                ${NewConfirmed}
            </td>
            <td>
                ${TotalConfirmed}
            </td>
            <td>
                ${NewDeaths}
            </td>
            <td>
                ${TotalDeaths}
            </td>
            <td>
                ${NewRecovered}
            </td>
            <td>
                ${TotalRecovered}
            </td>
        </tr>
    </script>
}
