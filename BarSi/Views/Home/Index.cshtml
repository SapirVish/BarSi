@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/home.css">
}

<section class="info-section">
    <div id="global-covid19-data">
        <h3>World Data</h3>
        <br />
        <table class="table table-striped table-bordered table-hover" id="patients-table">
            <thead class="thead-light">
                <tr>
                    <th>
                        Country
                    </th>
                    <th>
                        New Confirmed
                    </th>
                    <th>
                        Total Confirmed
                    </th>
                    <th>
                        New Deaths
                    </th>
                    <th>
                        Total Deaths
                    </th>
                    <th>
                        New Recovered
                    </th>
                    <th>
                        Total Recovered
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="text-center video-div">
        <video id="video1" style="width:600px;max-width:100%;" controls="" data-vscid="2pq0mznng">
            <source src="~/Media/Videos/covid19.mp4" type="video/mp4">
            <source src="~/Media/Videos/covid19.webm" type="video/mp4">
            <source src="~/Media/Videos/covid19.ogg" type="video/mp4">
            Your browser does not support HTML5 video.
        </video>
    </div>
</section>

@section Scripts{
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js"></script>
    <script src="~/js/home.js" asp-append-version="true"></script>

    <script type="text/html" id="global-covid19-data-results">
        <tr>
            <td>
                ${Country}
            </td>
            <td>
                ${NewConfirmed}
            </td>
            <td>
                ${TotalConfirmed}
            </td>
            <td>
                ${NewDeaths}
            </td>
            <td>
                ${TotalDeaths}
            </td>
            <td>
                ${NewRecovered}
            </td>
            <td>
                ${TotalRecovered}
            </td>
        </tr>
    </script>
}