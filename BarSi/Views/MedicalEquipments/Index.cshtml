@model IEnumerable<BarSi.Models.MedicalEquipment>

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/patients.css">
}

@{
    ViewData["Title"] = "All Medical Equipment";
}

    <h1>All Medical Equipment</h1>

        @if (@ViewBag.IsAdmin)
        {
            <a asp-action="Create">
                <button asp-action="Create" type="button" class="btn btn-outline-info add-new"
                        data-toggle="tooltip" data-placement="top" title="Add New Hospital">
                    <i class="fa fa-plus"></i>
                    Add Hospital
                </button>
            </a>
        }
<table class="table table-striped table-bordered table-hover" id="equipment-table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Price)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Quantity)
            </th>
            <td>
                @if (@ViewBag.IsAdmin)
                {<a asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit btn btn-outline-info"></i></a>}
                <a asp-action="Details" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Details"><i class="fa fa-info-circle btn btn-outline-info"></i></a>
                @if (@ViewBag.IsAdmin)
                {<a asp-action="Delete" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash btn btn-outline-info"></i></a>}
            </td>
        </tr>
}
    </tbody>
</table>
